<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {# {{ encore_entry_link_tags('app') }} #}
    {% endblock %}

    {% block javascripts %}
        {# {{ encore_entry_script_tags('app') }} #}
    {% endblock %}
</head>

<nav class="navbar navbar-expand-lg navbar-light bg-light"
     style="height: 70px;">

    <a class="navbar-brand" href="{{ path('home') }}">tech transfer center</a>
    <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
    {% if app.user %}
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a class="nav-link" href="{{ path('create_post') }}">Создать пост</a>
        </li>
        <li>
            <a class="nav-link" href="{{ path('app_logout') }}">Выйти</a>
        </li>
        <li>
                <a class="nav-link" href="{{ path('password_change') }}">Поменять пароль</a>
        </li>
        <li>
            <a class="nav-link" href="{{ path('profile', {'author_id': app.user.id }) }}">{{ app.user.username }}</a>
        </li>
        {% endif %}

        {% if not app.user %}
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link" href="{{ path('app_login') }}">Войти</a></li>
        <li>
            <a class="nav-link" href="{{ path('app_register') }}">Регистрация</a>
        </li>
    </ul>
    {% endif %}

</nav>
{% block body %}
{% endblock %}
</body>
</html>
